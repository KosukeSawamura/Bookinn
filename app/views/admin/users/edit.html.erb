<div class="container text-light">
 <div class="row">
  <div class="col-md-8 offset-md-1 my-3">
    <h2 class="head-line title_h2 text-center mx-auto">会員情報編集</h2>

   <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>

  <table>
    <tr>
      <th><%= f.label :ユーザー名 %></th>
      <td><%= f.text_field :name, class:"form-control" %><br>
      </td>
    </tr>

    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email , class:"form-control"%></td>
    </tr>

    <tr>
      <th><%= f.label :会員ステータス %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "退会" %>
      </th>
    </tr>
  </table>


      <div class="row text-right mb-5">
        <%= f.submit "変更を保存する" ,class: "btn btn-success " %>
      </div>
  <% end %>

  </div>